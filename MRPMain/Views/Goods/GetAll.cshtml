@using ExternalModels
@model GoodsDto[]
@{
    ViewData["Title"] = "Спецификации";
}

<!DOCTYPE html>

<html>
<head>
    <title>Товары</title>
</head>
<body>
    <h3>Товары</h3>
    <table>
        <tr>
            <td>Идентификатор</td>
            <td>Родитель</td>
            <td>Название</td>
            <td>Количество для 1 товара</td>
            <td></td>
        </tr>
        @foreach (var phone in Model)
        {
            <tr>
                <td>@phone.Id</td>
                <td>@phone.ParentItemId</td>
                <td>@phone.Name</td>
                <td>@phone.Balance</td>
                <td><a href="~/Home/Buy/@phone.Id">Купить</a></td>
                <td><a href="~/Home/Buy/@phone.Id">Сделать заказ</a></td>
                <td><a href="~/Goods/GetTree/@phone.Id">Разложить</a></td>
            </tr>
        }
    </table>
</body>
</html>
